@import './common'
@import '../../common/stylesheets/mixins/vicanso'

#header
  background-color #004385
  vicansoGradient #0054a6, #004385
  left 0
  right 0
  top 0
  position fixed
  z-index 99
  #weiboLogin
    float right
    a
      line-height 24px
      color white
    // .userInfoContainer

  .navbar
    paddingValue = 30px
    height HEADER_HEIGHT
    line-height HEADER_HEIGHT
    padding 0 paddingValue
    width CONTENT_WIDTH - 2 * paddingValue
    margin auto
    .navItem
      float left
      height 100%
      &.active
        a
          background-color #003363
      a
        display block
        color white
        text-align center
        width 100px
        .icon
          padding-right 15px

    .hidden
      display none

#goToTop
  position fixed
  width 15px
  right 10px
  bottom 10px