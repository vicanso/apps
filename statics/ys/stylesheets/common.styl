@import '../../common/stylesheets/mixins/vicanso'
$CONTENT_WIDTH = 1200px
$HEADER_HEIGHT = 40px
$SPACING_VALUE = 10px

.borderRadius5
  border-radius 5px
.borderRadius3
  border-radius 3px


.blueGradient
  color white
  background-color #004385
  vicansoGradient #0054a6, #004385

.grayGradient
  color black
  background-color #e0e0e0
  vicansoGradient #f8f8f8, #e0e0e0

.icon
  height 24px
  width 24px
  background-repeat no-repeat
  background-position center
.iBorder
  background-image url(../images/icon_border.png)
.iOk
  background-image url(../images/icon_ok.png)
.iRemove
  background-image url(../images/icon_remove.png)
.iArrowDown
  background-image url(../images/icon_arrow_down.png)
.iArrowUp
  background-image url(../images/icon_arrow_up.png)
.iDocument
  background-image url(../images/icon_document.png)
.iReload
  background-image url(../images/icon_reload.png)
.iRemoveWhite
  background-image url(../images/icon_remove_white.png)
.btn
  text-align center
  padding 5px 15px
  color #0f0f0f
  border 1px solid #c0c0c0
  background-color #e0e0e0
  vicansoGradient #f8f8f8, #e0e0e0
  box-shadow inset 0 0 10px rgba(255,255,255,0.2) inset 0 1px 0 rgba(255,255,255,0.1)
  border-radius 3px
  display inline-block
  *display inline
  *zoom 1
  &:hover
    background-color #c0c0c0
    vicansoGradient #f8f8f8, #c0c0c0
.btnPrimary
  background-color #0054a6
  border 1px solid #0054a6
  color #fff
  background-image none
  box-shadow inset 0 0 10px rgba(255,255,255,0.2) inset 0 1px 0 rgba(255,255,255,0.1)
  text-shadow 0 -1px 0 rgba(0,0,0,0.2)
  &:hover
    background-image none
    background-color #004c95

.warningText
  color #c09853
.errorText
  color #b94a48