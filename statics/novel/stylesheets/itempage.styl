@import "./common"
@import './mixins/gradients'
#contentContainer
  margin HEADER_HEIGHT + SPACING_VALUE 50px 0 50px
  .title
    text-align center
    font-size 24px
    line-height 48px
  .novelContent
    box-shadow 0 1px 3px rgba(34, 25, 25, 0.4)
    padding 5px
    background-color white
    p
      font-size 18px
      line-height 32px
      text-indent 2em
      color #48484c
      background-color #f7f7f9
      padding 0 5px 10px 5px
  .controlBtns
    position fixed
    bottom 10px
    right 20px
    font-size 14px
    line-height 16px
    width 15px
    .pageBtn
      display inline-block
      padding 10px 5px
      color white
      background linear-gradient(top, #444, #222)
      border 1px solid black
      border-color #222 #222 #000
      border-color rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25)
    .pageBtnDisabled
      color #222
    .lastBtn
      margin-right 0
    .pageBtn
      *display inline